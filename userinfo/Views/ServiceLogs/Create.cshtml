@model Servicelog
<head>
    <style>
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            width: 100%;
        }

        .btn {
            background-color: #007bff;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            border: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h2>Add Service Record</h2>
    <form method="post" asp-action="create">
        <div class="form-group">
            <input type="hidden" asp-for="vehicleId" value="@ViewBag.VehicleId">
        </div>
        <div class="form-group">
            <label asp-for="date">Date</label>
            <input asp-for="date" required type="date" placeholder="Enter VIN Number">
            <span asp-validation-for="date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="mileageIn">Mileage In</label>
            <input asp-for="mileageIn" type=number placeholder="Enter Mileage In">
            <span asp-validation-for="mileageIn" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="mileageOut">Mileage Out</label>
            <input asp-for="mileageOut" type=number placeholder="Enter Mileage Out">
            <span asp-validation-for="mileageOut" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="serviceNotes">Service Notes</label>
            <input asp-for="serviceNotes" placeholder="Enter services completed">
            <span asp-validation-for="serviceNotes" class="text-danger"></span>
        </div>

        <button type="submit">Add Service</button>
    </form>
</body>