@using userinfo.ViewModels
@model GarageServiceLogViewModel

            <div class="container">
                <h1>Vehicle Details</h1>
                <div class="card">
                    <div class="card-body">
                        <!-- Vehicle details go here -->
                        <p><strong>VIN:</strong> @Model.Vehicle.vin</p>
            <p><strong>Nickname:</strong> @Model.Vehicle.nickname</p>
            <p><strong>Purchase Date:</strong> @Model.Vehicle.purchaseDate</p>
            <p><strong>Year:</strong> @Model.Vehicle.modelYear</p>
                        <p><strong>Make:</strong> @Model.Vehicle.Make</p>
                        <p><strong>Model:</strong> @Model.Vehicle.Model</p>
            <p><strong>Trim:</strong> @Model.Vehicle.trim</p>
            <p><strong>Number of Cylinders:</strong> @Model.Vehicle.engineCylinders </p>
            <p><strong>Displacement:</strong> @Model.Vehicle.displacementL </p>
                        <!-- Add more details as needed -->
                    </div>
                </div>
                <div class="mt-3">
        <a class="btn btn-danger" asp-controller="Garage" asp-action="Edit" asp-route-id="@Model.Vehicle.vehicleId">Edit</a>
        <form asp-controller="Garage" asp-action="Delete" asp-route-id="@Model.Vehicle.vehicleId" method="post">
            <input type="submit" value="Delete Vehicle" class="btn btn-primary" />
        </form>
                </div>
    <div class="d-flex justify-content-between align-items-center mt-5">
        <h2>Service History</h2>
        <a asp-controller="ServiceLogs" asp-action="Create" asp-route-vehicleId="@Model.Vehicle.vehicleId" class="btn btn-primary">Add Service Log</a>
    </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Mileage In</th>
                            <th>Mileage Out</th>
                            <th>Service Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
            @foreach (var log in Model.ServiceLogs)
            {
                <tr>
                    <td>@log.date</td>
                    <td>@log.mileageIn</td>
                    <td>@log.mileageOut</td>
                    <td>@log.serviceNotes</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="ServiceLogs" asp-action="Edit" asp-route-id="@log.servicelogId">Edit</a>
                        <form asp-controller="ServiceLogs" asp-action="Delete" asp-route-id="@log.servicelogId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
                        
                    </tbody>
                </table>
            </div>
